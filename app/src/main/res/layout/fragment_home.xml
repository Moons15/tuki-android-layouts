<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/include_home_header" />

            <include layout="@layout/include_challenge_menu" />

            <include layout="@layout/include_contact_list" />

            <include layout="@layout/include_last_route_list" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/semi_distance"
                android:layout_marginTop="@dimen/semi_distance"
                android:layout_marginEnd="@dimen/semi_distance"
                android:layout_marginBottom="@dimen/semi_distance"
                android:alpha="0.1"
                android:background="#FFFFFF" />

            <include layout="@layout/include_challenges_by_route_list" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>