<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".presentation.main.notification.NotificationFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#020000"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/complete_distance"
        android:text="@string/notification"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/complete_distance"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="@dimen/complete_distance"
        android:layout_marginBottom="@dimen/complete_distance"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="4"
        tools:listitem="@layout/item_notification" />


</FrameLayout>